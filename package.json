{
  "name": "ai-rules-generator",
  "version": "1.0.0",
  "type": "module",
  "description": "Generate customized LLM instructions based on project selections",
  "main": "dist/index.js",
  "bin": {
    "ai-rules-gen": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli/index.tsx",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "start": "node dist/cli/index.js",
    "prepublish": "npm run build"
  },
  "keywords": [
    "llm",
    "ai",
    "code-generation",
    "development-guidelines",
    "cli",
    "typescript"
  ],
  "author": "AI Rules Generator",
  "license": "MIT",
  "dependencies": {
    "ink": "^4.4.1",
    "react": "^18.2.0",
    "commander": "^11.1.0",
    "chalk": "^5.3.0",
    "fs-extra": "^11.1.1",
    "zod": "^3.22.4",
    "yaml": "^2.3.4",
    "glob": "^10.3.10",
    "inquirer": "^9.2.12"
  },
  "devDependencies": {
    "@types/react": "^18.2.37",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.8.10",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "eslint": "^8.53.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "tsx": "^4.1.4",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "templates",
    "README.md"
  ]
}